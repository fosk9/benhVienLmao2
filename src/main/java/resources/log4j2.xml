<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg %X{employee_id} %X{patient_id}%n"/>
        </Console>
        <!-- File Appender -->
        <File name="File" fileName="logs/benhVienLmao.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg %X{employee_id} %X{patient_id}%n"/>
        </File>
        <!-- Database Appender -->
        <JDBC name="DatabaseAppender" tableName="SystemLogs">
            <ConnectionFactory class="com.benhvienlmao.utils.DBContext" method="getConn"/>
            <Column name="employee_id" pattern="%X{employee_id}" isUnicode="false"/>
            <Column name="patient_id" pattern="%X{patient_id}" isUnicode="false"/>
            <Column name="action" pattern="%message" isUnicode="true"/>
            <Column name="log_level" pattern="%level" isUnicode="false"/>
            <Column name="created_at" pattern="%date{yyyy-MM-dd HH:mm:ss}" isUnicode="false"/>
        </JDBC>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <AppenderRef ref="DatabaseAppender"/>
        </Root>
    </Loggers>
</Configuration>